<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEMANA7COMPLETO.Regristro"
             Background="#112B47">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Nombre: " TextColor="Wheat" />
                <Entry Placeholder="Introduce tu Nombre" x:Name="Nombre" TextColor="White" PlaceholderColor="Gray"/>
                <Label Text="Usuario: " TextColor="Wheat"/>
                <Entry Placeholder="Introduce tu Usuario " TextColor="White" Keyboard="Email" x:Name="Usuario"  PlaceholderColor="Gray"/>
                <Label Text="Contrasena: " TextColor="Wheat"/>
                <Entry Placeholder="Introduce tu Contraseña "  TextColor="White" IsPassword="True" x:Name="Contrasenia"  PlaceholderColor="Gray"/>
                <Button x:Name="btn_agregar" TextColor="White" VerticalOptions="Center"  BorderWidth="1.5"
                        CornerRadius="50"
                        BorderColor="ForestGreen"
                         Text="Agregar" Clicked="btn_agregar_Clicked" BackgroundColor="Transparent"></Button>
            </StackLayout>
        </ScrollView>
       </ContentPage.Content>
</ContentPage>